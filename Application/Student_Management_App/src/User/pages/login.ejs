<link rel="stylesheet" href="/css/login.css">

<div class="logincontainer">
    <h1 style="text-align: center;margin-top: 1rem; margin-bottom: 1rem; display:block;width:100%;height:auto">Login</h1>
    <form action="/login/submit" method="POST" class="loginform">
        <input type="text" name="username" placeholder="Username" required>
        <input type="password" name="password" placeholder="Password" required>
        <select name="cateogry" placeholder="Select Cateogry" required>
          <option value="Teacher">Teacher</option>
          <option value="Student">Student</option>
          <option value="Faculty">Faculty</option>
        </select>
        <button type="submit" style="margin-top: 1.5rem;">Login</button>
      </form>
      <section class="dont">
        <span class="text" style="margin-top: 1.2rem;">Dont Have an account </span> <a href="/signup"><button type="submit" style="margin-top: -0.7rem;">SignUP</button></a>
      </section>
</div>
