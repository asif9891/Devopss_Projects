<header class="myheader">
    <nav>
        <ul>
            <li>Home</li>
            <li>About</li>
            <li>contactUs</li>
        </ul>
        <section id="button">
            <% if (user) { %>
                <section style="margin-top: 1rem;letter-spacing: 0.2rem;">
                    <span>Welcome, <%= user %></span>
                    <a href="/logout" style="position: relative; left: 10rem; top: -1rem;">Logout</a>
                </section>
                <% } else { %>
                    <a href="login">
                            <button type="submit">Login</button>
                        </a>
                        <a href="signup">
                            <button type="submit">SignUp</button>
                        </a>
                    <% } %>
        </section>
    </nav>
</header>